{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "www"
    ]
}